// Modern Clean Esprit Categories Component Styling
// User-Friendly Design with Esprit Brand Colors

:host {
  display: block;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: #f8fafc;
  min-height: 100vh;
}

// Esprit Design System Variables
:root {
  --esprit-primary: #e30613;
  --esprit-primary-hover: #c10512;
  --esprit-primary-light: rgba(227, 6, 19, 0.1);
  --esprit-white: #ffffff;
  --esprit-gray-50: #f8fafc;
  --esprit-gray-100: #f1f5f9;
  --esprit-gray-200: #e2e8f0;
  --esprit-gray-300: #cbd5e1;
  --esprit-gray-400: #94a3b8;
  --esprit-gray-500: #64748b;
  --esprit-gray-600: #475569;
  --esprit-gray-700: #334155;
  --esprit-gray-800: #1e293b;
  --esprit-gray-900: #0f172a;
  --esprit-success: #10b981;
  --esprit-warning: #f59e0b;
  --esprit-error: #ef4444;
  --esprit-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --esprit-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --esprit-radius: 12px;
  --esprit-radius-lg: 16px;
  --esprit-transition: 0.2s ease;
}

// Main Container
.categories-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  
  @media (max-width: 768px) {
    padding: 1rem;
  }
}

// Header Section
.categories-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--esprit-white);
  border-radius: var(--esprit-radius-lg);
  box-shadow: var(--esprit-shadow);
  border-left: 4px solid var(--esprit-primary);
  
  h2 {
    margin: 0;
    color: var(--esprit-gray-900);
    font-size: 1.75rem;
    font-weight: 700;
  }
  
  @media (max-width: 768px) {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
}

// Categories List
.categories-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
  
  @media (max-width: 768px) {
    grid-template-columns: 1fr;
  }
}

// Category Card
.category-card {
  background: var(--esprit-white);
  border-radius: var(--esprit-radius-lg);
  padding: 1.5rem;
  box-shadow: var(--esprit-shadow);
  border: 1px solid var(--esprit-gray-200);
  transition: var(--esprit-transition);
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--esprit-shadow-lg);
    border-color: var(--esprit-primary-light);
  }
}

// Category Header
.category-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
  
  h3 {
    margin: 0;
    color: var(--esprit-gray-900);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
  }
}

// Category Actions
.category-actions {
  display: flex;
  gap: 0.5rem;
  flex-shrink: 0;
}

// Category Description
.category-description {
  color: var(--esprit-gray-600);
  line-height: 1.6;
  margin: 0;
}

// Empty State
.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--esprit-white);
  border-radius: var(--esprit-radius-lg);
  box-shadow: var(--esprit-shadow);
  
  h3 {
    color: var(--esprit-gray-900);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }
  
  p {
    color: var(--esprit-gray-600);
    margin: 0 0 2rem 0;
    font-size: 1rem;
  }
}

// Loading State
.loading-state {
  text-align: center;
  padding: 4rem 2rem;
  
  p {
    color: var(--esprit-gray-600);
    font-size: 1.125rem;
    margin: 0;
  }
}

// Button Styles
.btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: var(--esprit-radius);
  font-weight: 600;
  font-size: 0.875rem;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: var(--esprit-transition);
  
  &:focus {
    outline: 2px solid var(--esprit-primary);
    outline-offset: 2px;
  }
  
  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  &.btn-primary {
    background: var(--esprit-primary);
    color: var(--esprit-white);
    
    &:hover:not(:disabled) {
      background: var(--esprit-primary-hover);
      transform: translateY(-1px);
      box-shadow: var(--esprit-shadow-lg);
    }
  }
  
  &.btn-secondary {
    background: var(--esprit-gray-100);
    color: var(--esprit-gray-700);
    
    &:hover:not(:disabled) {
      background: var(--esprit-gray-200);
    }
  }
  
  &.btn-outline-primary {
    background: transparent;
    color: var(--esprit-primary);
    border: 1px solid var(--esprit-primary);
    
    &:hover:not(:disabled) {
      background: var(--esprit-primary);
      color: var(--esprit-white);
    }
  }
  
  &.btn-outline-danger {
    background: transparent;
    color: var(--esprit-error);
