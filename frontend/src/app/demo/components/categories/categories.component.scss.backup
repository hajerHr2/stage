}

.btn:focus {
  outline: 2px solid var(--esprit-primary);
  outline-offset: 2px;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn.btn-primary {
  background-color: var(--esprit-primary);
  color: var(--esprit-white);
}

.btn.btn-primary:hover:not(:disabled) {
  background-color: var(--esprit-primary-hover);
  transform: translateY(-1px);
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
}

.btn.btn-secondary {
  background-color: var(--esprit-gray-100);
  color: var(--esprit-gray-700);
}

.btn.btn-secondary:hover:not(:disabled) {
  background-color: var(--esprit-gray-200);
}

.btn.btn-outline-primary {
  background-color: transparent;
  color: var(--esprit-primary);
  border: 1px solid var(--esprit-primary);
}

.btn.btn-outline-primary:hover:not(:disabled) {
  background-color: var(--esprit-primary);
  color: var(--esprit-white);
}

.btn.btn-outline-danger {
  background-color: transparent;
  color: var(--esprit-error);
  border: 1px solid var(--esprit-error);
}

.btn.btn-outline-danger:hover:not(:disabled) {
  background-color: var(--esprit-error);
  color: var(--esprit-white);
}

/* Dialog Styles */

.dialog-header {
  background-color: var(--esprit-primary);
  color: var(--esprit-white);
  padding: 1.5rem;
  margin: -1.5rem -1.5rem 1.5rem -1.5rem;
  border-radius: var(--esprit-radius-lg) var(--esprit-radius-lg) 0 0;
}

.dialog-header h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}

/* Form Styles */

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--esprit-gray-700);
  font-weight: 600;
  font-size: 0.875rem;
}

.form-group input, .form-group textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--esprit-gray-300);
  border-radius: var(--esprit-radius);
  font-size: 0.875rem;
  transition: var(--esprit-transition);
}

.form-group input:focus, .form-group textarea:focus {
  outline: none;
  border-color: var(--esprit-primary);
  box-shadow: 0 0 0 3px var(--esprit-primary-light);
}

.form-group input.ng-invalid.ng-touched, .form-group textarea.ng-invalid.ng-touched {
  border-color: var(--esprit-error);
}

.form-group input.ng-invalid.ng-touched:focus, .form-group textarea.ng-invalid.ng-touched:focus {
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 100px;
}

/* Character Counter */

.character-counter {
  text-align: right;
  font-size: 0.75rem;
  color: var(--esprit-gray-500);
  margin-top: 0.25rem;
}

.character-counter.over-limit {
  color: var(--esprit-error);
}

/* Dialog Actions */

.dialog-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-end;
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--esprit-gray-200);
}

@media (max-width: 480px) {
  .dialog-actions {
    flex-direction: column;
  }
  .dialog-actions .btn {
    width: 100%;
    justify-content: center;
  }
}

/* Ultra-Enhanced Statistics Dashboard */

.esprit-stats-section {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--esprit-space-md);
  margin-bottom: var(--esprit-space-lg);
  
  .esprit-stat-card {
    background: var(--esprit-white);
    border-radius: var(--esprit-radius-md);
    padding: var(--esprit-space-md);
    display: flex;
    align-items: center;
    gap: var(--esprit-space-md);
    box-shadow: var(--esprit-shadow);
    border: 1px solid var(--esprit-gray-200);
    transition: all var(--esprit-transition-normal);
    position: relative;
    overflow: hidden;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: var(--esprit-red);
      transform: scaleY(0);
      transition: transform var(--esprit-transition-normal);
    }
    
    &:hover {
      transform: translateY(-4px);
      box-shadow: var(--esprit-shadow-lg);
      
      &::before {
        transform: scaleY(1);
      }
    }
    
    &.loading {
      opacity: 0.7;
      
      .esprit-stat-number {
        background: var(--esprit-gray-200);
        color: transparent;
        border-radius: var(--esprit-radius-sm);
        animation: shimmer 1.5s ease-in-out infinite;
      }
    }
    
    .esprit-stat-icon {
      width: 64px;
      height: 64px;
      border-radius: var(--esprit-radius);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      
      i {
        font-size: 1.5rem;
        z-index: 2;
        position: relative;
      }
    }
    
    &.esprit-stat-primary .esprit-stat-icon {
      background: var(--esprit-red-light);
      i { color: var(--esprit-red); }
    }
    
    &.esprit-stat-success .esprit-stat-icon {
      background: var(--esprit-success-light);
      i { color: var(--esprit-success); }
    }
    
    &.esprit-stat-info .esprit-stat-icon {
      background: var(--esprit-info-light);
      i { color: var(--esprit-info); }
    }
    
    &.esprit-stat-warning .esprit-stat-icon {
      background: var(--esprit-warning-light);
      i { color: var(--esprit-warning); }
    }
    
    .esprit-stat-content {
      flex: 1;
      
      .esprit-stat-number {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--esprit-gray-900);
        line-height: 1;
        margin-bottom: var(--esprit-space-xs);
      }
      
      .esprit-stat-label {
        display: block;
        font-size: 0.875rem;
        color: var(--esprit-gray-600);
        font-weight: 600;
        margin-bottom: var(--esprit-space-xs);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      
      .esprit-stat-trend {
        display: flex;
        align-items: center;
        gap: var(--esprit-space-xs);
        
        i {
          font-size: 0.75rem;
          color: var(--esprit-success);
        }
        
        span {
          font-size: 0.75rem;
          color: var(--esprit-gray-500);
          font-weight: 500;
        }
      }
    }
    
    .esprit-stat-decoration {
      position: absolute;
      top: -20px;
      right: -20px;
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: radial-gradient(circle, var(--esprit-red-lighter) 0%, transparent 70%);
      opacity: 0.5;
    }
  }
}

// Ultra-Enhanced Categories Grid
.esprit-categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
  gap: var(--esprit-space-md);
  
  @media (max-width: 768px) {
    grid-template-columns: 1fr;
  }
  
  .esprit-category-card {
    background: var(--esprit-white);
    border-radius: var(--esprit-radius-md);
    overflow: hidden;
    box-shadow: var(--esprit-shadow);
    border: 1px solid var(--esprit-gray-200);
    transition: all var(--esprit-transition-normal);
    position: relative;
    
    &:hover {
      transform: translateY(-6px);
      box-shadow: var(--esprit-shadow-xl);
      
      .esprit-card-overlay {
        opacity: 1;
      }
      
      .esprit-card-glow {
        opacity: 0.6;
      }
    }
    
    .esprit-card-header {
      padding: var(--esprit-space-md);
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      border-bottom: 1px solid var(--esprit-gray-100);
      
      .esprit-category-icon {
        width: 48px;
        height: 48px;
        background: var(--esprit-red-light);
        border-radius: var(--esprit-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        
        i {
          font-size: 1.25rem;
          color: var(--esprit-red);
          z-index: 2;
        }
        
        &::after {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          border-radius: var(--esprit-radius);
          background: inherit;
          opacity: 0.3;
          transform: scale(0);
          transition: transform var(--esprit-transition-normal);
        }
      }
      
      .esprit-card-actions {
        display: flex;
        gap: var(--esprit-space-xs);
        
        .esprit-action-btn {
          width: 40px;
          height: 40px;
          border: none;
          border-radius: var(--esprit-radius-sm);
          cursor: pointer;
          transition: all var(--esprit-transition-fast);
          display: flex;
          align-items: center;
          justify-content: center;
          position: relative;
          overflow: hidden;
          
          i {
            font-size: 0.875rem;
            z-index: 2;
            position: relative;
          }
          
          &::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            transition: all var(--esprit-transition-fast);
            z-index: 1;
          }
          
          &:hover::before {
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            border-radius: var(--esprit-radius-sm);
          }
          
          &.esprit-view-btn {
            background: var(--esprit-info-light);
            color: var(--esprit-info);
            
            &:hover {
              transform: scale(1.05);
              &::before { background: var(--esprit-info-light); }
            }
          }
          
          &.esprit-edit-btn {
            background: var(--esprit-warning-light);
            color: var(--esprit-warning);
            
            &:hover {
              transform: scale(1.05);
              &::before { background: var(--esprit-warning-light); }
            }
          }
          
          &.esprit-delete-btn {
            background: var(--esprit-error-light);
            color: var(--esprit-error);
            
            &:hover {
              transform: scale(1.05);
              &::before { background: var(--esprit-error-light); }
            }
          }
        }
      }
    }
    
    .esprit-card-content {
      padding: var(--esprit-space-md);
      
      .esprit-category-name {
        margin: 0 0 var(--esprit-space-sm) 0;
        font-size: 1.375rem;
        font-weight: 700;
        color: var(--esprit-gray-900);
        line-height: 1.3;
      }
      
      .esprit-category-description {
        margin: 0 0 var(--esprit-space-sm) 0;
        color: var(--esprit-gray-600);
        font-size: 0.875rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      
      .esprit-category-metrics {
        display: flex;
        gap: var(--esprit-space-md);
        
        .esprit-metric {
          display: flex;
          align-items: center;
          gap: var(--esprit-space-xs);
          
          i {
            font-size: 0.75rem;
            color: var(--esprit-gray-400);
          }
          
          span {
            font-size: 0.75rem;
            color: var(--esprit-gray-500);
            font-weight: 500;
          }
        }
      }
    }
    
    .esprit-card-footer {
      padding: var(--esprit-space-sm) var(--esprit-space-md);
      background: var(--esprit-gray-50);
      display: flex;
      justify-content: space-between;
      align-items: center;
      
      .esprit-category-id {
        font-size: 0.75rem;
        color: var(--esprit-gray-500);
        font-weight: 600;
        font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
      }
      
      .esprit-category-status {
        display: flex;
        align-items: center;
        gap: var(--esprit-space-xs);
        
        .esprit-status-dot {
          width: 8px;
          height: 8px;
          border-radius: 50%;
          background: var(--esprit-gray-300);
          
          &.active {
            background: var(--esprit-success);
            box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
          }
        }
        
        span {
          font-size: 0.75rem;
          color: var(--esprit-gray-600);
          font-weight: 500;
        }
      }
    }
    
    .esprit-card-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(227, 6, 19, 0.02) 0%, rgba(227, 6, 19, 0.05) 100%);
      opacity: 0;
      transition: opacity var(--esprit-transition-normal);
      pointer-events: none;
    }
    
    .esprit-card-glow {
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: var(--esprit-gradient-primary);
      border-radius: var(--esprit-radius-md);
      opacity: 0;
      transition: opacity var(--esprit-transition-normal);
      z-index: -1;
      filter: blur(8px);
    }
  }
}

// Ultra-Enhanced Empty State
.esprit-empty-state {
  text-align: center;
  padding: var(--esprit-space-xl) var(--esprit-space-lg);
  background: var(--esprit-white);
  border-radius: var(--esprit-radius-lg);
  box-shadow: var(--esprit-shadow);
  border: 1px solid var(--esprit-gray-200);
  
  .esprit-empty-animation {
    margin-bottom: var(--esprit-space-lg);
    
    .esprit-empty-icon {
      position: relative;
      width: 120px;
      height: 120px;
      background: var(--esprit-red-light);
      border-radius: var(--esprit-radius-xl);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
      
      i {
        font-size: 3rem;
        color: var(--esprit-red);
        z-index: 2;
        position: relative;
      }
      
      .esprit-icon-float {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: var(--esprit-radius-xl);
        background: var(--esprit-red);
        opacity: 0.1;
        animation: iconFloat 3s ease-in-out infinite;
      }
    }
  }
  
  .esprit-empty-content {
    h3 {
      margin: 0 0 var(--esprit-space-sm) 0;
      font-size: 1.875rem;
      font-weight: 700;
      color: var(--esprit-gray-900);
    }
    
    p {
      margin: 0 0 var(--esprit-space-lg) 0;
      color: var(--esprit-gray-600);
      font-size: 1.125rem;
      line-height: 1.6;
    }
    
    .esprit-empty-features {
      display: flex;
      justify-content: center;
      gap: var(--esprit-space-lg);
      margin-bottom: var(--esprit-space-lg);
      
      @media (max-width: 768px) {
        flex-direction: column;
        gap: var(--esprit-space-sm);
      }
      
      .esprit-feature {
        display: flex;
        align-items: center;
        gap: var(--esprit-space-xs);
        
        i {
          font-size: 0.875rem;
          color: var(--esprit-success);
        }
        
        span {
          font-size: 0.875rem;
          color: var(--esprit-gray-600);
          font-weight: 500;
        }
      }
    }
    
    .esprit-empty-action-btn {
      background: var(--esprit-gradient-primary);
      color: var(--esprit-white);
      border: none;
      border-radius: var(--esprit-radius);
      padding: var(--esprit-space-sm) var(--esprit-space-lg);
      font-size: 1.125rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--esprit-transition-normal);
      display: inline-flex;
      align-items: center;
      gap: var(--esprit-space-xs);
      box-shadow: var(--esprit-shadow);
      position: relative;
      overflow: hidden;
      
      &:hover {
        transform: translateY(-3px);
        box-shadow: var(--esprit-shadow-lg);
      }
      
      .esprit-btn-content {
        display: flex;
        align-items: center;
        gap: var(--esprit-space-xs);
        position: relative;
        z-index: 2;
      }
      
      .esprit-btn-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
      }
      
      &:hover .esprit-btn-shine {
